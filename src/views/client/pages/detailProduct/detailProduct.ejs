<script>
    function changePriceOnSize() {
        let data = $("#seletet-type-size").val();
        $("#data-price-on-detail-product").text(data);
        $("#firstPrice").val(data);
    }
    function changeDataNumberProduct() {
        let dataNumberProduct = +$("#data-number-qty-product").val();
        if (dataNumberProduct < 1) {
            let dataNumberProduct = $("#data-number-qty-product").val(1);
            alertify.notify("Số lượng đặt tối thiểu là 1", "error", 7);
            return false;
        }
        if (dataNumberProduct > 10) {
            let dataNumberProduct = $("#data-number-qty-product").val(1);
            alertify.notify("Số lượng đặt tối đa 1 lần là 10", "error", 7);
            return false;
        }
    }
</script>
